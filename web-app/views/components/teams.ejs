
<!-- Modal -->
<div
  class="modal fade"
  id="Teams"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">My Teams</h5>
        <button
          type="button"
          class="btn-close"
          data-mdb-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>

      <div class="modal-body ">
          <div class="d-md-inline-flex flex-row justify-content-center "> 
            <% for(let i =0 ;  i < teams.length ; i++) {%>
     
        <div class="card pad">
           
            <div class="card-body">
              <h5 class="card-title"><%=teams[i].TeamName%></h5>
              <p class="card-text">
                Some quick example text to build on the card title and make up the bulk of the
                card's content.
              </p>
              <a href="#!" class="btn btn-primary">Button</a>
            </div>
          </div>
        
          <% }%>

        
        </div>
       
        <table class="table table-bordered">
            <thead>
              <tr>
                <th scope="col">Team Name</th>
                <th scope="col">Team Size</th>
                <th scope="col">Status</th>
              </tr>
            </thead>
            <tbody>
                <% for(let i =0 ;  i < teams.length ; i++) {%>
              <tr>
                <td><%=teams[i].TeamName%></td>
                <td><%=teams[i].Size%></td>

              </tr>
              <% }%>
            </tbody>
          </table>
          <!-- Default form contact -->
            <div class="d-flex justify-content-center align-items-center">
            <form action="/Teams/"  method="post" >

            <!-- 2 column grid layout with text inputs for the first and last names -->
            <div class="form-outline mb-4">
                <input type="text" required id="form4Example1" class="form-control" />
                <label class="form-label" for="form4Example1">Team Name</label>
              </div>
            
              <!-- Email input -->
              <div class="form-outline mb-4">
                <input type="number" required  min=2 max=6 id="form4Example2" class="form-control" />
                <label class="form-label" for="form4Example2">Team Size(2-6)</label>
              </div>

              <button  type="submit" class="btn btn-secondary" > Create new Team</button>

            </form></div>
          

      </div>
      <div class="modal-footer">
          
        <button type="button" class="btn btn-secondary" data-mdb-dismiss="modal">
          Close
        </button>
      </div>

    </div>
  </div>
  
</div>    

